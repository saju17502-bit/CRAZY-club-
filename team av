<script>
    let userData = { phone: '', balance: 0.00 };

    function copyToClipboard(text) {
        const el = document.createElement('textarea');
        el.value = text;
        document.body.appendChild(el);
        el.select();
        document.execCommand('copy');
        document.body.removeChild(el);
        alert("‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶ï‡¶™‡¶ø ‡¶π‡ßü‡ßá‡¶õ‡ßá: " + text);
    }

    function handleSecureRegister() {
        const ph = document.getElementById('reg-ph').value;
        const ps = document.getElementById('reg-ps').value;
        const psc = document.getElementById('reg-ps-confirm').value;

        if(ph.length !== 11) return alert("‡¶Æ‡ßã‡¶¨‡¶æ‡¶á‡¶≤ ‡¶®‡¶Æ‡ßç‡¶¨‡¶∞ ‡¶Ö‡¶¨‡¶∂‡ßç‡¶Ø‡¶á ‡ßß‡ßß ‡¶°‡¶ø‡¶ú‡¶ø‡¶ü ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá!");
        if(ps.length < 8) return alert("‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶ï‡¶Æ‡¶™‡¶ï‡ßç‡¶∑‡ßá ‡ßÆ ‡¶°‡¶ø‡¶ú‡¶ø‡¶ü ‡¶π‡¶§‡ßá ‡¶π‡¶¨‡ßá!");
        if(ps !== psc) return alert("‡¶™‡¶æ‡¶∏‡¶ì‡¶Ø‡¶º‡¶æ‡¶∞‡ßç‡¶° ‡¶¶‡ßÅ‡¶ü‡¶ø ‡¶Æ‡ßá‡¶≤‡ßá‡¶®‡¶ø!");

        userData.phone = ph;
        localStorage.setItem('tigro_pro_v1', JSON.stringify(userData));
        init();
    }

    function init() {
        const saved = localStorage.getItem('tigro_pro_v1');
        if(saved) {
            userData = JSON.parse(saved);
            document.getElementById('p-auth').classList.add('hidden');
            document.getElementById('p-lobby').classList.remove('hidden');
            document.getElementById('display-name').innerText = "MEMBER_" + userData.phone.slice(-4);
            document.getElementById('bal-text').innerText = userData.balance.toFixed(2);
            fetchData();
        }
    }

    function showP(p) {
        document.querySelectorAll('[id^="p-"]').forEach(el => el.classList.add('hidden'));
        document.getElementById('p-'+p).classList.remove('hidden');
    }

    function openBet(t) {
        // ‡¶ü‡¶æ‡¶ï‡¶æ ‡¶®‡¶æ ‡¶•‡¶æ‡¶ï‡¶≤‡ßá ‡¶Ö‡ßç‡¶Ø‡¶æ‡¶≤‡¶æ‡¶∞‡ßç‡¶ü ‡¶è‡¶¨‡¶Ç ‡¶°‡¶ø‡¶™‡ßã‡¶ú‡¶ø‡¶ü ‡¶Ö‡¶™‡¶∂‡¶®
        if(userData.balance < 1) {
            alert("‡¶¶‡ßÅ‡¶É‡¶ñ‡¶ø‡¶§ ‡¶¨‡¶∏! ‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¨‡ßç‡¶Ø‡¶æ‡¶≤‡ßá‡¶®‡ßç‡¶∏ ‡¶™‡¶∞‡ßç‡¶Ø‡¶æ‡¶™‡ßç‡¶§ ‡¶®‡ßü‡•§ ‡¶ó‡ßá‡¶Æ ‡¶ñ‡ßá‡¶≤‡¶§‡ßá ‡¶Ü‡¶ó‡ßá ‡¶°‡¶ø‡¶™‡ßã‡¶ú‡¶ø‡¶ü ‡¶ï‡¶∞‡ßÅ‡¶®‡•§");
            showP('dep');
            return;
        }
        document.getElementById('bt-display').innerText = t;
        document.getElementById('bet-sheet').classList.add('active');
    }

    function closeBet() { document.getElementById('bet-sheet').classList.remove('active'); }

    function confirmBet() {
        let amt = parseFloat(document.getElementById('b-amt').value);
        if(amt > userData.balance) {
            alert("‡¶Ü‡¶™‡¶®‡¶æ‡¶∞ ‡¶¨‡ßç‡¶Ø‡¶æ‡¶≤‡ßá‡¶®‡ßç‡¶∏ ‡¶ï‡¶Æ! ‡¶ü‡¶æ‡¶ï‡¶æ ‡¶ú‡¶Æ‡¶æ ‡¶¶‡¶ø‡¶®‡•§");
            closeBet();
            showP('dep');
            return;
        }
        userData.balance -= amt;
        document.getElementById('bal-text').innerText = userData.balance.toFixed(2);
        localStorage.setItem('tigro_pro_v1', JSON.stringify(userData));
        alert("‡¶¨‡ßá‡¶ü ‡¶ß‡¶∞‡¶æ ‡¶∏‡¶´‡¶≤ ‡¶π‡ßü‡ßá‡¶õ‡ßá!");
        closeBet();
    }

    async function fetchData() {
        try {
            const res = await fetch("https://draw.ar-lottery01.com/WinGo/WinGo_1M/GetHistoryIssuePage.json?ts=" + Date.now());
            const json = await res.json();
            const list = json.data.list;
            document.getElementById('period-id').innerText = list[0].issueNumber.toString().slice(-4);
            const html = list.slice(0, 15).map(i => {
                const n = parseInt(i.number);
                return `<tr><td>${i.issueNumber.toString().slice(-4)}</td><td class="text-xl text-indigo-600">${n}</td><td class="${n>=5?'text-orange-500':'text-blue-500'}">${n>=5?'Big':'Small'}</td></tr>`;
            }).join('');
            document.getElementById('analysis-body').innerHTML = html;
        } catch(e) {}
    }

    setInterval(() => {
        let s = 60 - new Date().getSeconds();
        document.getElementById('timer').innerText = "00:" + (s < 10 ? '0'+s : s);
        if(s <= 5) {
            document.getElementById('lock-overlay').style.display = 'flex';
            document.getElementById('snd-count').play();
        } else {
            document.getElementById('lock-overlay').style.display = 'none';
        }
        if(s === 59) fetchData();
    }, 1000);

    window.onload = init;
</script>
</body>
</html>
